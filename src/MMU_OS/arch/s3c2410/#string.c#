
/**********************************************************************
* ‘Í³‘¼Æ‘×Ö‘·û‘Êý‘£¬‘²»‘°ü‘À¨‘×î‘ºó‘µÄ'\0'
**********************************************************************/
int strlen(const char *str)
{
	int i = 0;
	while(str[i++]);
	return i;
}

/**********************************************************************
* ‘·µ‘»Ø‘Öµ‘¸´‘ÖÆ‘µÄ‘×Ö‘·û‘Êý‘£¬‘°ü‘À¨‘×î‘ºó‘µÄ'\0'
**********************************************************************/
int strcpy(char *to,const char *from)
{
	int i = 0;
	while(from[i]){
		to[i]=from[i];
		i++;
	}
	to[i]='\0';
	return i+1;
}
